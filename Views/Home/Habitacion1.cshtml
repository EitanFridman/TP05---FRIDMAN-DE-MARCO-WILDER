@{
    ViewData["Title"] = "Habitación 1"; // Cambiar el número de habitación según corresponda
}

<h1>La Oficina de Grondona</h1> <!-- Cambiar el título y contenido según la habitación -->
<p>Encuentras el despacho del fallecido presidente de la AFA, Julio Grondona...</p>
<img src="~/images/grondona.jpg" alt="Julio Grondona" />
<form asp-action="Habitacion" method="post">
    <input type="hidden" name="sala" value="1" /> <!-- Cambiar el número de sala según corresponda -->
    <input type="text" name="clave" placeholder="Ingrese la clave" />
    <button type="submit">Validar</button>
</form>
<button onclick="alert('Pista 1: Mirá las paredes...')">Pista 1</button>
<button onclick="alert('Pista 2: Revisa el cajón...')">Pista 2</button>
@if(ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}